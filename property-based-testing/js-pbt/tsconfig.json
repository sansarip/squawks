{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["test/**/*"],
  "exclude": ["node_modules", "tmp"]
}
